<div class="container mt-3 mb-3">
  <h1>List of Products</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Product</th>
        <th>Show Product Detail</th>
        <th>Remove Product</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.product_name %></td>
          <td>
            <%= link_to "Show", product, class: "btn btn-primary" %>
          </td>
          <td>
            <%= button_to "Remove", product, method: :delete, data: {'turbo-confirm': "Are you sure you want to delete this product?" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p>Click here for <%= link_to "Add a Product", new_product_path %> </p>
</div>