<div class="container mt-3 mb-3">

  <%= render @product %>

  <div class="row mt-3">
    <div class="col-sm-3">
      <%= link_to "Back to Products", products_path, class: "btn btn-primary btn-block" %>
    </div>

    <div class="col-sm-9">
      <%= button_to "Remove Product", @product, method: :delete, class: "btn btn-danger btn-block", data: { 'turbo-confirm': "Are you sure you want to delete this product?" } %>
    </div>
  </div>
</div>
